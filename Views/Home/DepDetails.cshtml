@model IEnumerable<WebApp.Models.Employee>

@{
    ViewBag.Title = "Department Details";
}

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Department</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Name</td>
                <td>@employee.Department</td>
                <td>@employee.Email</td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script src="~\js\customscript.js"></script>
}