@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}
<h3> Employee List </h3>
<table>
    <thead>
        <tr>
            <td>ID</td>
            <th>Name</th>
            <th>Department</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td><a href="@Url.Action("Details", "Home", new{@employee.Id})">@employee.Id</a></td>
                <td>@employee.Department</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
            </tr>
        }
    </tbody>
</table>