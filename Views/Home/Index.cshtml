@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}

<div class="container">
    <div class="row">
        @foreach (var employee in Model)
        {
            var photopath = "~/images/" + (employee.PhotoPath ?? "images.jpg");
            <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src=@photopath alt="Card image cap" asp-append-version=true>
                    <div class="card-body">
                        <h2 class="card-title">@employee.Name</h2>
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-primary">Details</a>
                        <a asp-controller="Home" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-primary">Delete</a>
                        <a asp-controller="Home"  asp-action="Update" asp-route-id="@employee.Id" class="btn btn-primary">Update</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
