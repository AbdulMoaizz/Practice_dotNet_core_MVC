@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}



<div class="container">
    <div class="row">
        @foreach (var employee in Model)
        {
            <div class="col-md-3">
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="~/images/images.jpg" alt="Card image cap" asp-append-version=true>
                    <div class="card-body">
                        <h2 class="card-title">@employee.Name</h2>
                        <a asp-controller="Home", asp-action="Details", asp-route-id="@employee.Id" class="btn btn-primary">Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
